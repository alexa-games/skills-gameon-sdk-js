{
  "type": "APL",
  "version": "1.1",
  "import": [],
  "layouts": {
    "playerAvatar": {
      "parameters": [
        "imageUrl",
        "colorHex",
        "size"
      ],
      "items": [
        {
          "type": "Container",
          "width": "${size}",
          "height": "${size}",
          "items": [
            {
              "type": "Frame",
              "width": "${size}",
              "height": "${size}",
              "backgroundColor": "#${colorHex}",
              "borderColor": "#fff",
              "borderRadius": "${size}",
              "borderWidth": "3",
              "items": [
                {
                  "type": "Container",
                  "width": "100%",
                  "height": "100%",
                  "justifyContent": "center",
                  "direction": "row",
                  "alignItems": "center",
                  "items": [
                    {
                      "type": "Image",
                      "width": "60%",
                      "height": "60%",
                      "source": "${imageUrl}",
                      "align": "center"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    "rankList": {
      "parameters": [
        "listData",
        "height",
        "rowHeight",
        "currentPlayerName"
      ],
      "items": [
        {
          "type": "Container",
          "direction": "column",
          "height": "${height}",
          "width": "100%",
          "items": [
            {
              "type": "Sequence",
              "data": "${listData}",
              "scrollDirection": "vertical",
              "height": "100%",
              "width": "100%",
              "items": [
                {
                  "type": "Frame",
                  "when": "${data.score.rank % 2 == 1}",
                  "width": "100%",
                  "backgroundColor": "rgba(255, 255, 255, 0.5)",
                  "borderWidth": "1",
                  "items": [
                    {
                      "type": "rankListItem",
                      "image": "${data.profile.avatar}",
                      "name": "${data.profile.name}",
                      "score": "${data.score.score}",
                      "rank": "${data.score.rank}",
                      "colorHex": "${data.profile.color}",
                      "height": "${rowHeight}",
                      "isCurrentPlayer": "${data.isCurrentPlayer}"
                    }
                  ]
                },
                {
                  "type": "Frame",
                  "when": "${data.score.rank % 2 == 0}",
                  "width": "100%",
                  "borderWidth": "1",
                  "items": [
                    {
                      "type": "rankListItem",
                      "image": "${data.profile.avatar}",
                      "name": "${data.profile.name}",
                      "score": "${data.score.score}",
                      "rank": "${data.score.rank}",
                      "colorHex": "${data.profile.color}",
                      "height": "${rowHeight}",
                      "isCurrentPlayer": "${data.isCurrentPlayer}"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    "rankListItem": {
      "parameters": [
        "name",
        "score",
        "image",
        "rank",
        "colorHex",
        "height",
        "isCurrentPlayer"
      ],
      "items": [
        {
          "type": "Container",
          "style": "rankListItem",
          "width": "100%",
          "height": "${height}",
          "alignItems": "center",
          "direction": "row",
          "justifyContent": "spaceBetween",
          "items": [
            {
              "type": "Container",
              "width": "${height}",
              "maxHeight": "100",
              "alignItems": "center",
              "direction": "row",
              "justifyContent": "center",
              "items": [
                {
                  "type": "Image",
                  "when": "${rank == 1 && payload.data.renderOptions.trophyUrl}",
                  "width": "${height}",
                  "height": "${height}",
                  "source": "${payload.data.renderOptions.trophyUrl}"
                },
                {
                  "type": "Text",
                  "when": "${rank != 1 || !payload.data.renderOptions.trophyUrl}",
                  "style": "rankListItem",
                  "textAlign": "center",
                  "text": "${rank}"
                }
              ]
            },
            {
              "type": "Container",
              "width": "${height}",
              "height": "${height}",
              "alignItems": "center",
              "direction": "column",
              "justifyContent": "center",
              "items": [
                {
                  "imageUrl": "${image}",
                  "colorHex": "${colorHex}",
                  "size": "${height}",
                  "type": "playerAvatar",
                  "alignSelf": "center"
                }
              ],
              "spacing": "20"
            },
            {
              "type": "Container",
              "paddingLeft": "${viewport.height < 500 ? '5' : '30'}",
              "alignItems": "center",
              "direction": "row",
              "items": [
                {
                  "type": "Text",
                  "style": "rankListItem",
                  "color": "${isCurrentPlayer ? '#66298f' : '#555555'}",
                  "paddingTop": "0",
                  "paddingBottom": "0",
                  "maxLines": 1,
                  "text": "${name}",
                  "fontWeight": "${isCurrentPlayer ? '500' : '300'}",
                  "grow": 1,
                  "shrink": 1
                }
              ],
              "spacing": "20",
              "grow": 1
            },
            {
              "type": "Container",
              "items": [
                {
                  "type": "Text",
                  "style": "rankListItem",
                  "paddingRight": "30",
                  "textAlign": "center",
                  "maxLines": 1,
                  "text": "${score}",
                  "fontWeight": "300"
                }
              ]
            }
          ]
        }
      ]
    },
    "playerPlaceHeader": {
      "parameters": [
        "payload",
        "iconWidth",
        "iconHeight"
      ],
      "items": [
        {
          "type": "Container",
          "width": "80%",
          "height": "100%",
          "alignItems": "center",
          "direction": "row",
          "justifyContent": "center",
          "items": [
            {
              "type": "Frame",
              "width": "80%",
              "height": "60%",
              "minHeight": "100dp",
              "items": [
                {
                  "type": "Container",
                  "width": "100%",
                  "height": "100%",
                  "paddingTop": "10dp",
                  "paddingBottom": "10dp",
                  "alignItems": "center",
                  "direction": "column",
                  "justifyContent": "center",
                  "items": [
                    {
                      "type": "Text",
                      "style": "scorePrimary",
                      "width": "80%",
                      "minWidth": "150dp",
                      "height": "60%",
                      "paddingLeft": "40dp",
                      "paddingTop": "0",
                      "textAlignVertical": "top",
                      "text": "${payload.data.renderOptions.scorePrimaryText}"
                    },
                    {
                      "type": "Text",
                      "style": "scoreSecondary",
                      "width": "80%",
                      "minWidth": "150dp",
                      "height": "40%",
                      "paddingLeft": "40dp",
                      "paddingTop": "0",
                      "textAlignVertical": "bottom",
                      "text": "${payload.data.renderOptions.scoreSecondaryText}"
                    }
                  ]
                }
              ],
              "backgroundColor": "#1da1a3",
              "borderRadius": "20"
            },
            {
              "type": "Image",
              "when": "${viewport.width <= 480}",
              "source": "${payload.data.renderOptions.logoImageUrl}",
              "width": "${iconWidth}",
              "height": "${iconHeight}",
              "position": "absolute",
              "right": "30",
              "top": "30"
            },
            {
              "type": "Image",
              "when": "${viewport.width > 480}",
              "source": "${payload.data.renderOptions.logoImageUrl}",
              "width": "${iconWidth}",
              "height": "${iconHeight}",
              "position": "absolute",
              "right": "0"
            }
          ]
        }
      ]
    },
    "playerScoreHeader": {
      "parameters": [
        "payload"
      ],
      "items": [
        {
          "type": "Container",
          "height": "100%",
          "width": "100%",
          "paddingLeft": "0",
          "paddingTop": "25",
          "paddingRight": "0",
          "paddingBottom": "25",
          "items": [
            {
              "type": "Frame",
              "width": "100%",
              "height": "100%",
              "backgroundColor": "#66298f",
              "borderColor": "#ffffff",
              "borderRadius": "20",
              "borderWidth": "${viewport.width < 500 ? '2' : '4'}",
              "items": [
                {
                  "type": "Container",
                  "width": "100%",
                  "height": "100%",
                  "alignItems": "center",
                  "direction": "row",
                  "justifyContent": "center",
                  "items": [
                    {
                      "type": "Image",
                      "when": "${payload.data.player.score.rank == 1}",
                      "width": "100",
                      "height": "60",
                      "source": "${payload.data.renderOptions.trophyUrl}"
                    },
                    {
                      "type": "Container",
                      "alignItems": "center",
                      "direction": "row",
                      "justifyContent": "center",
                      "items": [
                        {
                          "imageUrl": "${payload.data.player.profile.avatar}",
                          "colorHex": "${payload.data.player.profile.color}",
                          "size": "60",
                          "type": "playerAvatar",
                          "alignSelf": "center"
                        },
                        {
                          "spacing": "10",
                          "type": "Text",
                          "style": "playerScoreText",
                          "text": "${payload.data.player.profile.name}",
                          "fontWeight": "300"
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  },
  "mainTemplate": {
    "parameters": [
      "payload"
    ],
    "items": [
      {
        "type": "Container",
        "width": "100vw",
        "height": "100vh",
        "direction": "column",
        "items": [
          {
            "type": "Image",
            "when": "${payload.data.renderOptions.backgroundImageUrl}",
            "source": "${payload.data.renderOptions.backgroundImageUrl}",
            "width": "100vw",
            "height": "100vh",
            "position": "absolute",
            "scale": "best-fill"
          },
          {
            "type": "Container",
            "height": "100%",
            "width": "100%",
            "items": [
              {
                "when": "${viewport.height == 480 && viewport.width == 480}",
                "type": "Container",
                "id": "topContainer",
                "style": "topContainer",
                "width": "100%",
                "height": "250dp",
                "paddingLeft": "0",
                "paddingTop": "0",
                "paddingRight": "0",
                "paddingBottom": "0",
                "alignItems": "center",
                "justifyContent": "center",
                "items": [
                  {
                    "payload": "${payload}",
                    "iconWidth": "80px",
                    "iconHeight": "80px",
                    "type": "playerPlaceHeader",
                    "height": "100dp"
                  },
                  {
                    "payload": "${payload}",
                    "type": "playerScoreHeader",
                    "height": "140dp",
                    "width": "440dp"
                  }
                ]
              },
              {
                "when": "${viewport.height == 480 && viewport.width == 960}",
                "type": "Container",
                "id": "topContainer",
                "style": "topContainer",
                "width": "100%",
                "height": "260dp",
                "paddingLeft": "0",
                "paddingTop": "0",
                "paddingRight": "0",
                "paddingBottom": "0",
                "alignItems": "center",
                "justifyContent": "center",
                "items": [
                  {
                    "payload": "${payload}",
                    "iconWidth": "130px",
                    "iconHeight": "100px",
                    "type": "playerPlaceHeader",
                    "height": "100dp"
                  },
                  {
                    "payload": "${payload}",
                    "type": "playerScoreHeader",
                    "height": "140dp",
                    "width": "800dp"
                  }
                ]
              },
              {
                "when": "${viewport.height == 600 && viewport.width == 1024}",
                "type": "Container",
                "id": "topContainer",
                "style": "topContainer",
                "width": "100%",
                "height": "300dp",
                "paddingLeft": "0",
                "paddingTop": "0",
                "paddingRight": "0",
                "paddingBottom": "0",
                "alignItems": "center",
                "justifyContent": "center",
                "items": [
                  {
                    "payload": "${payload}",
                    "iconWidth": "180px",
                    "iconHeight": "140px",
                    "type": "playerPlaceHeader",
                    "height": "180dp"
                  },
                  {
                    "payload": "${payload}",
                    "type": "playerScoreHeader",
                    "height": "140dp",
                    "width": "800dp"
                  }
                ]
              },
              {
                "when": "${viewport.height == 800 && viewport.width == 1280}",
                "type": "Container",
                "id": "topContainer",
                "style": "topContainer",
                "width": "100%",
                "height": "380dp",
                "paddingLeft": "0",
                "paddingTop": "0",
                "paddingRight": "0",
                "paddingBottom": "0",
                "alignItems": "center",
                "justifyContent": "center",
                "items": [
                  {
                    "payload": "${payload}",
                    "iconWidth": "180px",
                    "iconHeight": "140px",
                    "type": "playerPlaceHeader",
                    "height": "210dp"
                  },
                  {
                    "payload": "${payload}",
                    "type": "playerScoreHeader",
                    "height": "140dp",
                    "width": "1000dp"
                  }
                ]
              },
              {
                "when": "${viewport.height > 1000}",
                "type": "Container",
                "id": "topContainer",
                "style": "topContainer",
                "width": "100%",
                "height": "365dp",
                "paddingLeft": "0",
                "paddingTop": "0",
                "paddingRight": "0",
                "paddingBottom": "0",
                "alignItems": "center",
                "justifyContent": "center",
                "items": [
                  {
                    "payload": "${payload}",
                    "iconWidth": "130px",
                    "iconHeight": "100px",
                    "type": "playerPlaceHeader"
                  },
                  {
                    "payload": "${payload}",
                    "type": "playerScoreHeader"
                  }
                ]
              },
              {
                "type": "Container",
                "when": "${viewport.height == 480 && viewport.width == 480}",
                "id": "bottomContainer",
                "width": "100%",
                "height": "180dp",
                "paddingLeft": "0",
                "paddingTop": "0",
                "paddingRight": "0",
                "paddingBottom": "0",
                "alignItems": "center",
                "justifyContent": "center",
                "items": [
                  {
                    "type": "Frame",
                    "backgroundColor": "rgba(255, 255, 255, 0.8)",
                    "borderRadius": "12",
                    "height": "100%",
                    "items": [
                      {
                        "type": "rankList",
                        "height": "100%",
                        "width": "400dp",
                        "rowHeight": "43",
                        "listData": "${payload.data.leaderboard}",
                        "currentPlayerName": "${payload.data.player.profile.name}"
                      }
                    ]
                  }
                ]
              },
              {
                "when": "${viewport.height == 480 && viewport.width == 960}",
                "type": "Container",
                "id": "bottomContainer",
                "width": "100%",
                "height": "210dp",
                "paddingLeft": "0",
                "paddingTop": "0",
                "paddingRight": "0",
                "paddingBottom": "0",
                "alignItems": "center",
                "justifyContent": "center",
                "items": [
                  {
                    "type": "Frame",
                    "backgroundColor": "rgba(255, 255, 255, 0.8)",
                    "borderRadius": "12",
                    "height": "100%",
                    "items": [
                      {
                        "type": "rankList",
                        "height": "100%",
                        "width": "800dp",
                        "rowHeight": "50",
                        "listData": "${payload.data.leaderboard}",
                        "currentPlayerName": "${payload.data.player.profile.name}"
                      }
                    ]
                  }
                ]
              },
              {
                "when": "${viewport.height == 600 && viewport.width == 1024}",
                "type": "Container",
                "id": "bottomContainer",
                "width": "100%",
                "height": "290dp",
                "paddingLeft": "0",
                "paddingTop": "0",
                "paddingRight": "0",
                "paddingBottom": "0",
                "alignItems": "center",
                "justifyContent": "center",
                "items": [
                  {
                    "type": "Frame",
                    "backgroundColor": "rgba(255, 255, 255, 0.8)",
                    "borderRadius": "12",
                    "height": "100%",
                    "items": [
                      {
                        "type": "rankList",
                        "height": "100%",
                        "width": "800dp",
                        "rowHeight": "56",
                        "listData": "${payload.data.leaderboard}",
                        "currentPlayerName": "${payload.data.player.profile.name}"
                      }
                    ]
                  }
                ]
              },
              {
                "when": "${viewport.height == 800 && viewport.width == 1280}",
                "type": "Container",
                "id": "bottomContainer",
                "width": "100%",
                "height": "410dp",
                "paddingLeft": "0",
                "paddingTop": "0",
                "paddingRight": "0",
                "paddingBottom": "0",
                "alignItems": "center",
                "justifyContent": "center",
                "items": [
                  {
                    "type": "Frame",
                    "backgroundColor": "rgba(255, 255, 255, 0.8)",
                    "borderRadius": "12",
                    "height": "100%",
                    "items": [
                      {
                        "type": "rankList",
                        "height": "100%",
                        "width": "900dp",
                        "rowHeight": "80",
                        "listData": "${payload.data.leaderboard}",
                        "currentPlayerName": "${payload.data.player.profile.name}"
                      }
                    ]
                  }
                ]
              },
              {
                "when": "${viewport.height > 1000}",
                "type": "Container",
                "id": "bottomContainer",
                "width": "100%",
                "height": "500dp",
                "paddingLeft": "0",
                "paddingTop": "0",
                "paddingRight": "0",
                "paddingBottom": "0",
                "alignItems": "center",
                "justifyContent": "center",
                "items": [
                  {
                    "type": "Frame",
                    "backgroundColor": "rgba(255, 255, 255, 0.8)",
                    "borderRadius": "12",
                    "height": "500dp",
                    "items": [
                      {
                        "type": "rankList",
                        "height": "100%",
                        "width": "80vw",
                        "rowHeight": "80",
                        "listData": "${payload.data.leaderboard}",
                        "currentPlayerName": "${payload.data.player.profile.name}"
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "styles": {
    "gameText": {
      "description": "Default game text",
      "values": [
        {
          "fontSize": "${viewport.height > 600 ? 38 : 28}",
          "fontWeight": "300",
          "textAlign": "center"
        },
        {
          "when": "${viewport.height < 500}",
          "fontSize": "22",
          "fontWeight": "300"
        },
        {
          "when": "${viewport.width < 500}",
          "fontSize": "18",
          "fontWeight": "300"
        }
      ]
    },
    "headerText": {
      "description": "Default header text",
      "values": [
        {
          "fontSize": "${viewport.height > 600 ? 38 : 32}",
          "fontWeight": "300"
        },
        {
          "when": "${viewport.shape == 'round'}",
          "fontSize": "20",
          "fontWeight": "300"
        }
      ]
    },
    "challengeText": {
      "description": "Default challenge text",
      "values": [
        {
          "fontSize": "${viewport.height > 600 ? 50 : 42}",
          "fontWeight": "300",
          "textAlign": "center"
        },
        {
          "when": "${viewport.shape == 'round'}",
          "fontSize": "24",
          "fontWeight": "300"
        }
      ]
    },
    "challengeWord": {
      "description": "Default challenge text",
      "values": [
        {
          "fontSize": "${viewport.height > 600 ? 70 : 52}",
          "fontWeight": "300",
          "textAlign": "center"
        },
        {
          "when": "${viewport.shape == 'round'}",
          "fontSize": "40",
          "fontWeight": "300"
        }
      ]
    },
    "scorePrimary": {
      "description": "Large text for showing score",
      "values": [
        {
          "fontWeight": 800,
          "fontSize": "50"
        },
        {
          "when": "${viewport.width <= 1024}",
          "fontSize": "38"
        },
        {
          "when": "${viewport.width <= 960}",
          "fontSize": "32"
        },
        {
          "when": "${viewport.width <= 480}",
          "fontSize": "26"
        }
      ]
    },
    "scoreSecondary": {
      "description": "Large text for showing score",
      "values": [
        {
          "fontWeight": 300,
          "fontSize": "34"
        },
        {
          "when": "${viewport.width <= 1024}",
          "fontSize": "32"
        },
        {
          "when": "${viewport.width <= 960}",
          "fontSize": "24"
        },
        {
          "when": "${viewport.width <= 480}",
          "fontSize": "19"
        }
      ]
    },
    "rankListItem": {
      "description": "Item style",
      "values": [
        {
          "color": "black",
          "fontSize": "20"
        },
        {
          "when": "${viewport.height < 500}",
          "fontSize": "18"
        },
        {
          "when": "${viewport.width < 500}",
          "fontSize": "11"
        }
      ]
    },
    "playerScoreText": {
      "description": "Item style",
      "values": [
        {
          "fontSize": "38"
        },
        {
          "when": "${viewport.height < 500}",
          "fontSize": "26"
        },
        {
          "when": "${viewport.width < 500}",
          "fontSize": "20"
        }
      ]
    }
  }
}
